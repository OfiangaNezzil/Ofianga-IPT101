<Window x:Class="OFIANGA_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Laundry Management System"
        Height="520" Width="602"
        WindowStartupLocation="CenterScreen"
        Background="#E8F8F5">

    <Grid Margin="0,0,0,26">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="458" Height="434">

            <TextBlock Text="🧺 Laundry Management System"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="#2E4053"
                       TextAlignment="Center"
                       Margin="0,0,0,30" Width="420"/>

            <TextBlock Text="Customer Name:"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="#34495E"
                       Margin="0,5,0,5"/>
            <TextBox Height="30" FontSize="14" Padding="5" BorderBrush="#3498DB" BorderThickness="1" />

            <TextBlock Text="Service Type:"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="#34495E"
                       Margin="0,10,0,5"/>
            <ComboBox Height="30" FontSize="14" Padding="5" BorderBrush="#3498DB" BorderThickness="1">
                <ComboBoxItem Content="Wash Only"/>
                <ComboBoxItem Content="Wash and Dry"/>
                <ComboBoxItem Content="Dry Clean"/>
            </ComboBox>

            <TextBlock Text="Weight (kg):"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="#34495E"
                       Margin="0,10,0,5"/>
            <TextBox Height="30" FontSize="14" Padding="5" BorderBrush="#3498DB" BorderThickness="1"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                <Button Content="Add Order"
                        Width="100" Height="35"
                        Background="#27AE60"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="5"
                        BorderThickness="0"
                        Cursor="Hand"/>
                <Button Content="Clear"
                        Width="80" Height="35"
                        Background="#F39C12"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="5"
                        BorderThickness="0"
                        Cursor="Hand"/>
                <Button Content="Exit"
                        Width="80" Height="35"
                        Background="#E74C3C"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="5"
                        BorderThickness="0"
                        Cursor="Hand"/>
            </StackPanel>

            <TextBlock Text="Order Summary"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#2E4053"
                       TextAlignment="Center"
                       Margin="0,40,0,10"/>
            <Border BorderBrush="#3498DB" BorderThickness="2" CornerRadius="10" Padding="10" Height="49" Width="449" RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleX="4.179"/>
                        <RotateTransform Angle="0.263"/>
                        <TranslateTransform X="1.571" Y="0.007"/>
                    </TransformGroup>
                </Border.RenderTransform>
                <TextBlock Text="No orders yet..."
                           FontSize="14"
                           Foreground="#7F8C8D"
                           TextAlignment="Center" Height="25" VerticalAlignment="Top"/>
            </Border>
        </StackPanel>
    </Grid>
</Window>
